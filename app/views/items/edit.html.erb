<%= form_with(model: [@list, @item], local: true, class: "max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md") do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
      <strong>Errors:</strong>
      <ul class="list-disc pl-5">
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= link_to "Back to list", list_path(@list), class: "text-blue-500 hover:text-blue-700 underline" %>
  </div>

  <div data-controller="label" data-label-list-id="<%= @list.id %>" data-label-item-id="<%= @item.id %>">
    <%= form.label :label, "Label", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.combobox :label, Label.all, name_when_new: "item[label][name]", input: { data: { label_target: "combobox" } } %>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, id: :item_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Update Item", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
  </div>
<% end %>
