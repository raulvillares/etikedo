<%= form_with model: [@list, @item] do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back to list", list_path(@list) %>
  </div>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <%= form.button %>
<% end %>