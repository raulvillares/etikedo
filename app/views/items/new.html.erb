<%= form_with model: [@list, @item], local: true, class: "max-w-lg mx-auto mt-6 p-6 bg-white rounded-lg shadow-md" do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="mb-4">
    <%= link_to "Back to list", list_path(@list), class: "text-blue-500 hover:text-blue-700 underline" %>
  </div>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Save Item", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
